{
  "version": 4,
  "configurePresets": [
    {
      "name": "developer-tools",
      "displayName": "Developer Tools",
      "description": "Uses a custom toolchain to bypass VS build issues.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "toolchainFile": "${sourceDir}/ClangToolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-std=c++20 -Wall -Wextra",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
      }
    }
  ]
}
